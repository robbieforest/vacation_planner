<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Trip #<%= @trip.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/trips" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @trip.user %>
          <a href="/trips/<%= @trip.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit trip
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @trip.user %>
          <a href="/delete_trip/<%= @trip.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete trip
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @trip.name %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @trip.user.present? %>
          <a href="/users/<%= @trip.user_id %>">
            <%= @trip.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@trip.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@trip.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "trip_templates/trip_trip_details" %>
  </div>
</div>
